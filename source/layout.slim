doctype 5
html lang=I18n.locale.to_s itemscope="itemscope" itemtype="http://schema.org/WebSite"
  head
    / = partial "meta"    
    = feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed"
    - %w{152 144 120 114 76 72 60 67}.each do |size|
      - size = "#{size}x#{size}"
      / link rel="apple-touch-icon" size=size href="/apple-touch-icon-#{size}-precomposed.png"
      / link rel="apple-touch-icon" href="/apple-touch-icon-precomposed.png"
    link rel="shortcut icon" href="/favicon.png"
    link rel="icon" type="image/ico" href="/favicon.ico"

    - if current_article
      - if current_article.previous_article
        link rel="prev" href=current_article.previous_article.url
      - if current_article.next_article
        link rel="next" href=current_article.next_article.url
    - elsif paginate
      - if prev_page
        link rel="prev" href=prev_page.url
      - if next_page
        link rel="next" href=next_page.url
  
  = stylesheet_link_tag 'application'
  = javascript_include_tag 'application'
  
  body
    / bootstrap 3 compatible
    nav.navbar itemscope="itemscope" itemtype="http://www.schema.org/SiteNavigationElement"
      .container
        .navbar-header
          button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false"
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          =link_to config.site_url, :class => 'navbar-brand logo'
            =image_tag('logo_numa.svg', :alt => 'NUMA', :class => 'logo')
        .collapse.navbar-collapse id="bs-example-navbar-collapse-1"
          ul.nav.navbar-nav.pull-right
            li.active= link_to 'Accelerator', '#accelerator'
            li= link_to 'Agenda2016', '#agenda2016'
            li= link_to 'Program', '#program'
            li= link_to 'Team', '#team'
            li= link_to 'Portfolio', '#portfolio'
            li= link_to 'Faq', '#faq'
            li= link_to 'Apply Now', 'https://www.f6s.com/', :class => 'btn-apply'
    
    .container
      / .row
      /   .content
      /     - if content_for? :main
      /       == yield_content :main
      /     - else
      /       main role='main'
      /         == yield
      section.intro
        .in
          div
            .heading
              h1 =data.numa['intro'].find{ |p| p.name == 'heading' }.content
              p =data.numa['intro'].find{ |p| p.name == 'subheading' }.content
              span =link_to 'watch our video', '#playvid', :class => 'btn play-vid'
      
      section.accelerator
        .col-sm-8
          h2 =data.numa['accelerator'].find{ |p| p.name == 'heading' }.content
          p =data.numa['accelerator'].find{ |p| p.name == 'paragraph' }.content
          
          ul.metrics
            li
              =data.numa['accelerator'].find{ |p| p.name == 'trackrecord' }.content
        
        .col-sm-4
          ul.agenda
            li Agenda
            =data.numa['intro'].find{ |p| p.name == 'agenda' }.content
            li
              =link_to 'Apply Now', "#f6slink", :class => 'btn btn-lg btn-apply'
        
        section.wanted
          .col-sm-12
            h2 =data.numa['wanted'].find{ |p| p.name == 'heading' }.content
            ul.wanted
              =data.numa['wanted'].find{ |p| p.name == 'criteria' }.content

        section.program
          .col-sm-12
            h2 =data.numa['program'].find{ |p| p.name == 'heading' }.content
            p =data.numa['program'].find{ |p| p.name == 'paragraph' }.content
            ul.keypoints
              =data.numa['program'].find{ |p| p.name == 'keypoints' }.content
          .col-sm-12
            h3 Program Timeline
            ul.timeline
              =data.numa['program'].find{ |p| p.name == 'timeline' }.content
        
        section.team
          .col-sm-12
            h2 =data.numa['team'].find{ |p| p.title == 'heading' }.content
            p =data.numa['team'].find{ |p| p.title == 'paragraph' }.content
          
          ul.people
            -data.numa['team'].each do |row|
              li.col-sm-2
                span.photo
                  = image_tag (row['photo'])
                strong
                  = row['name']
                em
                  = row['role']
                span.twitter
                  = link_to (row['twitter']? row['twitter'] : ""), "http://twitter.com/#{row['twitter']}"
                span.linkedin
                  = link_to '&nearr;', "#{row['linkedin']}"
        
        section.mentors
          .col-sm-12
            h2 =data.numa['mentors'].find{ |p| p.title == 'heading' }.content
            p =data.numa['mentors'].find{ |p| p.title == 'paragraph' }.content
          
          ul.people
            -data.numa['mentors'].each do |row|
              li.col-sm-2
                span.photo
                  = image_tag (row['photo'])
                strong.name
                  = row['name']
                em
                  = row['role']
                span.twitter
                  = link_to (row['twitter']? row['twitter'] : ""), "http://twitter.com/#{row['twitter']}"
                span.linkedin
                  = link_to '&nearr;', "#{row['linkedin']}"
        
        section.global
          .col-sm-12
            h2 =data.numa['global'].find{ |p| p.name == 'heading' }.content
            p =data.numa['global'].find{ |p| p.name == 'paragraph' }.content

        section.success
          .col-sm-12
            h2 =data.numa['stories'].find{ |p| p.title == 'heading' }.content
            /p =data.numa['stories'].find{ |p| p.name == 'paragraph' }.content
          
          ul.stories
            -data.numa['stories'].each do |row|
              li.col-sm-4
                span.photo
                  = image_tag (row['picture'])
                h4.name
                  = row['name']
                em
                  = row['role']
                p
                  = row['story']
        
        / section.partners
          
